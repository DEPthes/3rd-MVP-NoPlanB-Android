<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_levelup_unlock"
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        android:background="@drawable/shape_corner_40"
        android:scaleType="fitXY"
        android:src="@drawable/img_level30_dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_nickname"
        style="@style/neodgm_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:gravity="center"
        android:lineHeight="22sp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/iv_levelup_unlock"
        app:layout_constraintStart_toStartOf="@id/iv_levelup_unlock"
        app:layout_constraintTop_toTopOf="@id/iv_levelup_unlock"
        tools:text="BeomJoon님의\n모든 성장을 마쳤어요!" />

    <ImageView
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="24dp"
        android:src="@drawable/img_btn_ok"

        app:layout_constraintBottom_toBottomOf="@id/iv_levelup_unlock"
        app:layout_constraintEnd_toEndOf="@id/iv_levelup_unlock"
        app:layout_constraintStart_toStartOf="@id/iv_levelup_unlock"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>