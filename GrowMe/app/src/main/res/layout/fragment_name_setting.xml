<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.views.characterSetting.NameSettingFragment">

    <Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="캐릭터 선택"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@id/tool_bar"
        app:layout_constraintBottom_toBottomOf="@id/tool_bar"
        app:layout_constraintStart_toStartOf="@id/tool_bar"
        app:layout_constraintEnd_toEndOf="@id/tool_bar" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_left_white"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/tool_bar"
        app:layout_constraintBottom_toBottomOf="@id/tool_bar"
        app:layout_constraintStart_toStartOf="@id/tool_bar" />

    <ImageView
        android:id="@+id/img_lv5"
        android:layout_width="127dp"
        android:layout_height="52dp"
        android:background="@drawable/img_level5"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/img_ch5_name"
        android:layout_width="226dp"
        android:layout_height="40dp"
        android:background="@drawable/img_ch5_name"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/img_lv5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/img_ch_screen"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/img_character_screen"
        android:src="@drawable/skin_big1"
        android:scaleType="fitCenter"
        android:padding="50dp"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@id/img_ch5_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="202dp"
        android:layout_height="40dp"
        android:background="@drawable/img_write_name"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/img_ch_screen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="104dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_submit"
        app:layout_constraintTop_toBottomOf="@id/edt_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>