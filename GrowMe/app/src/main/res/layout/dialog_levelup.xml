<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_levelup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner_40"
        android:src="@drawable/dialog_levelup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_quest_desc"
        style="@style/neodgm_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:layout_marginTop="116dp"
        android:text="LV.12까지 필요한 EXP"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/iv_levelup"
        app:layout_constraintStart_toStartOf="@id/iv_levelup"
        app:layout_constraintTop_toTopOf="@id/iv_levelup" />

    <TextView
        android:id="@+id/tv_require_exp"
        style="@style/neodgm_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="130"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_quest_desc" />

    <ImageView
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:src="@drawable/img_btn_ok"
        app:layout_constraintBottom_toBottomOf="@id/iv_levelup"
        app:layout_constraintEnd_toEndOf="@id/iv_levelup"
        app:layout_constraintStart_toStartOf="@id/iv_levelup" />

</androidx.constraintlayout.widget.ConstraintLayout>