<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.views.characterSetting.SettingCompleteFragment">

    <Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/page_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/layer_character"
        android:layout_width="105dp"
        android:layout_height="216dp"
        android:background="@drawable/character_1"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/layer_face"
        android:layout_width="75dp"
        android:layout_height="33dp"
        android:background="@drawable/face_3"
        android:layout_marginTop="217dp"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/layer_hair"
        android:layout_width="123dp"
        android:layout_height="159dp"
        android:background="@drawable/hair1_for_total_character"
        android:layout_marginTop="142dp"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/layer_clothes"
        android:layout_width="69dp"
        android:layout_height="117dp"
        android:background="@drawable/clothes_2"
        android:layout_marginTop="248dp"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    
    <FrameLayout
        android:id="@+id/dialog"
        android:layout_width="313dp"
        android:layout_height="168dp"
        android:background="@drawable/dialog"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/layer_character"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="00 ë‹˜!"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_marginBottom="40dp"
        style="@style/neodgm_medium"
        app:layout_constraintStart_toStartOf="@id/dialog"
        app:layout_constraintEnd_toEndOf="@id/dialog"
        app:layout_constraintBottom_toBottomOf="@id/dialog" />
    
    <ImageView
        android:id="@+id/gif"
        android:layout_width="400dp"
        android:layout_height="530dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btn_start"
        android:layout_width="105dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>