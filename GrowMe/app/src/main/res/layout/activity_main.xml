<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.views.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_main"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/img_logo_title"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_tb_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_setting"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tb_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tb_main"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_toolbar_right"
        android:layout_width="88dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/img_logo_right"
        app:layout_constraintBottom_toBottomOf="@id/tb_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tb_main"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navi"
        app:layout_constraintTop_toBottomOf="@id/tb_main" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navi"
        style="@style/CustomBottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/cream_yellow"

        app:itemBackground="@android:color/transparent"
        app:itemIconTint="@drawable/bottom_navi_selected"
        app:itemPaddingBottom="16dp"
        app:itemPaddingTop="16dp"

        app:itemTextColor="@color/bottom_navigation_text_color"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>